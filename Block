-- ‚úÖ Server Hop ‡∏ó‡∏∏‡∏Å 3 ‡∏ä‡∏±‡πà‡∏ß‡πÇ‡∏°‡∏á
task.spawn(function()
    local Http = game:GetService("HttpService")
    local TPS = game:GetService("TeleportService")
    local Players = game:GetService("Players")
    local Api = "https://games.roblox.com/v1/games/"
    local place = game.PlaceId

    while true do
        task.wait(10800) -- 3 ‡∏ä‡∏±‡πà‡∏ß‡πÇ‡∏°‡∏á
        local function listServers()
            local url = Api .. place .. "/servers/Public?sortOrder=Asc&limit=10"
            local body = Http:JSONDecode(game:HttpGet(url))
            return body.data
        end

        local servers = listServers()
        if #servers > 0 then
            local chosen = servers[math.random(1, #servers)]
            TPS:TeleportToPlaceInstance(place, chosen.id, Players.LocalPlayer)
        end
    end
end)

-- ‚úÖ UI ‡πÅ‡∏à‡πâ‡∏á‡∏ß‡πà‡∏≤‡∏ó‡∏≥‡∏á‡∏≤‡∏ô
task.spawn(function()
    local StarterGui = game:GetService("StarterGui")
    StarterGui:SetCore("SendNotification", {
        Title = "üö¥ Running Script",
        Text = "‡∏£‡∏∞‡∏ö‡∏ö‡∏´‡∏•‡∏ö‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß!",
        Duration = 10
    })
end)

-- ‚úÖ ‡∏´‡∏°‡∏∏‡∏ô‡∏Å‡∏•‡πâ‡∏≠‡∏á + ‡πÄ‡∏•‡∏µ‡πâ‡∏¢‡∏ß‡∏™‡∏•‡∏±‡∏ö‡∏ó‡∏∏‡∏Å 8 ‡∏ß‡∏¥
task.spawn(function()
    local cam = workspace.CurrentCamera
    while true do
        task.wait(8)
        -- ‡∏´‡∏°‡∏∏‡∏ô‡∏Å‡∏•‡πâ‡∏≠‡∏á‡∏™‡∏∏‡πà‡∏°
        local yaw = math.rad(math.random(-45, 45))
        cam.CFrame = cam.CFrame * CFrame.Angles(0, yaw, 0)

        -- ‡πÄ‡∏•‡∏µ‡πâ‡∏¢‡∏ß‡∏ã‡πâ‡∏≤‡∏¢-‡∏Ç‡∏ß‡∏≤‡∏™‡∏•‡∏±‡∏ö‡∏™‡∏∏‡πà‡∏° (‡∏à‡∏≥‡∏•‡∏≠‡∏á‡∏û‡∏§‡∏ï‡∏¥‡∏Å‡∏£‡∏£‡∏°‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô)
        local bike
        for _, model in pairs(workspace:GetChildren()) do
            if model:IsA("Model") and model:FindFirstChildWhichIsA("VehicleSeat") then
                bike = model
                break
            end
        end
        if bike then
            local seat = bike:FindFirstChildWhichIsA("VehicleSeat")
            if seat then
                seat.Steer = math.random(0, 1) == 0 and -1 or 1
                wait(1)
                seat.Steer = 0
            end
        end
    end
end)

-- ‚úÖ ‡∏¢‡∏Å‡∏•‡πâ‡∏≠ + ‡∏î‡∏£‡∏¥‡∏ü‡∏ï‡πå + ‡∏´‡∏°‡∏∏‡∏ô‡∏û‡∏ß‡∏á‡∏°‡∏≤‡∏•‡∏±‡∏¢‡∏ó‡∏∏‡∏Å 10 ‡∏ß‡∏¥
task.spawn(function()
    local function getBike()
        for _, model in pairs(workspace:GetChildren()) do
            if model:IsA("Model") and model:FindFirstChildWhichIsA("VehicleSeat") then
                return model
            end
        end
        return nil
    end

    while true do
        local bike = getBike()
        if bike and bike.PrimaryPart then
            -- ‡∏¢‡∏Å‡∏•‡πâ‡∏≠
            bike:SetPrimaryPartCFrame(bike.PrimaryPart.CFrame * CFrame.Angles(math.rad(-25), 0, 0))

            -- ‡∏î‡∏£‡∏¥‡∏ü‡∏ï‡πå
            local drift = Instance.new("BodyAngularVelocity")
            drift.AngularVelocity = Vector3.new(0, 5, 0)
            drift.MaxTorque = Vector3.new(0, 100000, 0)
            drift.P = 1250
            drift.Parent = bike.PrimaryPart
            game:GetService("Debris"):AddItem(drift, 1.5)

            -- ‡∏û‡∏ß‡∏á‡∏°‡∏≤‡∏•‡∏±‡∏¢‡∏´‡∏°‡∏∏‡∏ô
            local seat = bike:FindFirstChildWhichIsA("VehicleSeat")
            if seat then
                seat.Steer = -1
                wait(0.5)
                seat.Steer = 1
                wait(0.5)
                seat.Steer = 0
            end
        end
        wait(10)
    end
end)
