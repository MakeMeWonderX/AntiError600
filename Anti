local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HumanoidRootPart = Character:WaitForChild("HumanoidRootPart")

local lastWheelie = 0
local lastDrift = 0
local wheelieInterval = 20
local driftInterval = 12
local floatHeight = 3

-- Function to float bike over obstacles
local function floatOverObstacles()
	local ray = Ray.new(HumanoidRootPart.Position, Vector3.new(0, -5, 0))
	local part, position = workspace:FindPartOnRay(ray, Character)
	if part and (HumanoidRootPart.Position - position).Magnitude < 2 then
		HumanoidRootPart.Velocity = Vector3.new(0, 50, 0)
	end
end

-- Simulate Wheelie
local function doWheelie()
	local now = tick()
	if now - lastWheelie >= wheelieInterval then
		lastWheelie = now
		HumanoidRootPart.Velocity = HumanoidRootPart.CFrame.LookVector * 40 + Vector3.new(0, 20, 0)
	end
end

-- Simulate Drift
local function doDrift()
	local now = tick()
	if now - lastDrift >= driftInterval then
		lastDrift = now
		HumanoidRootPart.Velocity = HumanoidRootPart.CFrame.RightVector * 40
	end
end

-- Rotate Camera Periodically
task.spawn(function()
	while true do
		wait(8)
		local cam = workspace.CurrentCamera
		cam.CFrame = cam.CFrame * CFrame.Angles(0, math.rad(math.random(-60, 60)), 0)
	end
end)

-- Periodic Actions
RunService.RenderStepped:Connect(function()
	floatOverObstacles()
	doWheelie()
	doDrift()
end)
